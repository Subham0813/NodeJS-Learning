<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>
  </head>
  <body>
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
    <p>URL Generated : http://127.0.0.1:4007/url/<%= locals.id %></p>
    <% } %>
    <form method="post" action="/url">
      <label for="url">Enter your URL</label>
      <br />
      <input
        type="text"
        name="url"
        id="url"
        placeholder="https://example.com"
      />
      <button>Generate</button>
    </form>
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>Sl. No</th>
          <th>ShortId</th>
          <th>Redirect To</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, i) => { %>

          <tr>
            <td><%=i +1%></td>
            <td><%=url.shortId%></td>
            <td><%=url.redirectUrl%></td>
            <td><%=url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
