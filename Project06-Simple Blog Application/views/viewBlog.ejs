<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')%>

    <title>Blogpage</title>
  </head>
  <body>
    <%- include('./partials/navbar.ejs')%>

    <div class="container my-5">
      <!-- Blog Card -->
      <div class="card">
        <!-- Blog Image -->
        <img
          src="<%= blog.coverImageURL %>"
          class="card-img-top"
          alt="Blog Cover Image"
        />

        <!-- Blog Content -->
        <div class="card-body">
          <h2 class="card-title"><%= blog.title %></h2>
          <p class="text-muted">
            Created by <strong><%= blog.createdBy.fullname %></strong> Â· <%= new
            Date(blog.createdBy.createdAt).toLocaleDateString('en-US', { year:
            'numeric', month: 'long', day: 'numeric' }) %>
          </p>
          <hr />
          <p class="card-text"><%= blog.body %></p>
        </div>
      </div>
      <!-- Comment Section -->
      <div class="mt-5">
        <h5 >Comments ( <%= comments.length %> )</h5>
        <% if (locals.user) { %>
        <form method="post" action="/user/blogs/comment/<%= blog._id %>">
          <div class="mb-3">
            <textarea
              id="content"
              name="content"
              class="form-control"
              rows="2"
              placeholder="Write your comment here..."
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
        <% } %>
      </div>
      <hr />
      <div class="container">
        <% locals.comments.forEach(comment => { %>
        <div class="card my-3">
          <div class="card-body d-flex">
            <!-- User Image -->
            <div class="me-3">
              <img
                src="<%= comment.createdBy.profileImageURL %>"
                alt="User Avatar"
                class="rounded-circle"
                style="width: 50px; height: 50px; object-fit: cover"
              />
            </div>

            <!-- Comment Content -->
            <div class="container">
              <h6 class="mb-1"><%= comment.createdBy.fullname %></h6>
              <p class="mb-0"><%= comment.content %></p>
              <small class="text-muted">
                Posted on <%= new
                Date(comment.createdAt).toLocaleDateString('en-US', { year:
                'numeric', month: 'short', day: 'numeric', hour: '2-digit',
                minute: '2-digit' }) %>
              </small>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts.ejs')%>
  </body>
</html>
